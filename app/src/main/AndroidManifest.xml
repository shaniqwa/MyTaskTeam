<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobile.shenkar.shani.mytaskteam" >
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity"  android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="Create a Team" android:name="CreateTeam" android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:label="Report Task" android:name=".ReportTask" android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:label="Edit Task" android:name=".CreateEditTask" android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:label="Main View" android:name="ManagerMainView" android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:label="Login" android:name=".LoginActivity" android:configChanges="orientation"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
